@model ERP.WebUI.Models.LogOnModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>LogOn</title>

    <link href="@Url.Content("~/Content/reset.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/invalid.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/simpla.jquery.configuration.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/facebox.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.wysiwyg.js")" type="text/javascript"></script>
</head>
<body id="login">
    <div id="login-wrapper" class="png_bg">
        <div id="login-top">
            <h1>ERP</h1>
            <a href="#"><img id="logo" src="../../Content/images/logo.png" alt="ERP logo" /></a>
        </div>
        <div id="login-content">
            @using (Html.BeginForm())
            {
                 <div class="notification information png_bg">
                    <div> Just click "Sign In". No password needed.</div>
                 </div>
                <p>
                    @Html.LabelFor(m => m.UserName,"User Name")
                    @Html.TextBoxFor(m => m.UserName, new { @class = "text-input"})
                </p>
                <div class="clear"></div>
                <p>
                    @Html.LabelFor(m => m.Password)
                    @Html.TextBoxFor(m => m.Password, new { @class = "text-input"})
                </p>
                <div class="clear"></div>
                <p id="remember-password">
                    @Html.CheckBoxFor(m => m.RememberMe) Remember me                    
                </p>
                <div class="clear"></div>
                <p>
                    <input class="button" type="submit" value="Sign In" />
                </p>
            }
        </div>
    </div>
</body>
</html>
