<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/reset.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/invalid.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/simpla.jquery.configuration.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/facebox.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.wysiwyg.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.date.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.datePicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>

<body>
<div id="body-wrapper">
    <div id="sidebar">
        <div id="sidebar-wrapper">
            <h1 id="sidebar-title"><a href="#">ERP</a></h1>
            <a href="#"><img id="logo" src="../../Content/images/logo.png" alt="ERP logo" /></a>
            <div id="profile-links"> 
             Hello, <a href="#" title="Edit your profile">Finkle</a>, you have <a href="#messages" rel="modal" title="3 Messages">3 Messages</a>
             <br /><br />
             <a href="#" title="View the Site">View the Site</a> | <a href="#" title="Sign Out">Sign Out</a>
            </div>
            <ul id="main-nav">
                <!-- 1st menu -->
                <li><a href="#" class="nav-top-item">解决方案管理</a>
                    <ul>
                        <li><a href="#">查询事件解决方案</a></li>
                        <li><a href="#">修改解决方案</a></li>
                    </ul>
                </li>
                <!-- 2nd menu -->
                <li><a href="#" class="nav-top-item current">事件管理</a>
                    <ul>
                        <li><a href="#">事件查询</a></li>
                        <li><a href="#" class="current">事件类管理</a></li>
                        <li><a href="#">创建事件</a></li>
                        <li><a href="#">事件报表</a></li>
                    </ul>
                </li>
                <!-- 3rd menu -->
                <li><a href="#" class="nav-top-item">设备管理</a>
                    <ul>
                        <li><a href="#">设备信息管理</a></li>
                        <li><a href="#">添加库存</a></li>
                        <li><a href="#">库存查询</a></li>
                        <li><a href="#">出库查询</a></li>
                        <li><a href="#">历史调拨</a></li>
                    </ul>
                </li>
                <!-- 4th menu -->
                <li><a href="#" class="nav-top-item">店铺信息</a>
                    <ul>
                        <li><a href="#">查询店铺</a></li>
                        <li><a href="#">修改店铺信息</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
    <div id="main-content">
        @RenderBody()
    </div>
</div>    
</body>
</html>